---
const { data } = Astro.props;
---

<table class="border-collapse">
  <thead>
    <tr>
      {
        data.headers.map((header: string) => (
          <th class="border border-zinc-500 p-2">{header}</th>
        ))
      }</tr
    >
  </thead>
  <tbody
    >{
      data.rows.map((row: string[]) => (
        <tr>
          {row.map((cell) => (
            <td class="border border-zinc-500 p-2">{cell}</td>
          ))}
        </tr>
      ))
    }</tbody
  >
</table>
